@model Admin.App.Common.Models.UserDetails

@{
    ViewBag.Title = "NewUser";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<script src="~/scripts/AdminApp/User.js"></script>

@using (Html.BeginForm("SaveUser","UserDetails",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class=""></i>New User</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
                <li class="breadcrumb-item">User Master</li>
                <li class="breadcrumb-item">@Html.ActionLink("View Users", "ViewUser")</li>
            </ul>
        </div>
        @{ Html.RenderPartial("_ErrorLayout");}
        @Html.Hidden("hdnUserID", null)
        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <div class="row">
                        <form>
                            <div class="col-lg-1" style="display:none;">
                                @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control hidden" } })
                            </div>
                            <div class="col-lg-5">
                                <div class="form-group row">
                                    <label class="control-label col-md-5">Company Name<i style="color:red;font-size:larger;">*</i></label>
                                    <div class="col-md-12">
                                        @Html.DropDownListFor(model => model.CompanyID, new SelectList(Model.companyDetails, "CompanyID", "CompanyName"), "Select Company", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-5">First Name<i style="color:red;font-size:larger;">*</i></label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-5">Employee Code<i style="color:red;font-size:larger;">*</i></label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.EmployeeCode, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-5">User Name<i style="color:red;font-size:larger;">*</i></label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                              
                            </div>
                           
                            <div class="col-lg-5">
                                <div class="form-group row">
                                    <label class="control-label col-md-5">Role<i style="color:red;font-size:larger;">*</i></label>
                                    <div class="col-md-12">
                                        @Html.DropDownListFor(model => model.RoleId, new SelectList(Model.roleDetails, "RoleID", "Name"), "Select Role", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-5">Last Name<i style=""></i></label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-5">Primary Mail ID<i style=""></i></label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.PrimaryEmailID, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-5">Password<i style="color:red;font-size:larger;">*</i></label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                              
                               
                            </div>
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="page-header">
                                            <h2 class="mb-3 line-head"></h2>
                                        </div>
                                       
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-5">
                               
                                <div class="form-group row">
                                    <label class="control-label col-md-5">Address<i style="color:red;font-size:larger;">*</i></label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                               
                                <div class="form-group row">
                                    <label class="control-label col-md-5">Address 1<i style=""></i></label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.Address1, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-5">City<i style="color:red;font-size:larger;">*</i></label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-5">Phone Number<i style=""></i></label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-5">
                               
                                <div class="form-group row">
                                    <label class="control-label col-md-5">State<i style="color:red;font-size:larger;">*</i></label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-5">Country<i style="color:red;font-size:larger;">*</i></label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-5">Pincode<i style="color:red;font-size:larger;">*</i></label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.Pincode, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                            <div class="tile-footer" style="margin-left:830px;">
                                <div class="row">
                                    <div class="col-md-12">
                                        <button class="btn btn-primary" type="submit" value="Create" onclick="return btnSave()"><i class="fa fa-fw fa-lg fa-check-circle"></i>Register</button>&nbsp;&nbsp;&nbsp;
                                        <a class="btn btn-secondary" href='@Url.Action("ViewUser", "UserDetails")'><i class="fa fa-fw fa-lg fa-times-circle"></i>Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
   
}


